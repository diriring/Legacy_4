<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.java.s1.qna.QnaDAO">

	<select id="list" resultType="QnaDTO">
		SELECT * FROM QNA
	</select>
	
	<select id="detail" parameterType="QnaDTO" resultType="QnaDTO">
		SELECT * FROM QNA WHERE NUM = #{num}
	</select>

	<insert id="add" parameterType="QnaDTO">
		INSERT INTO QNA
		VALUES (QNA_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, 0, 0, 0, 0)
	</insert>
	
	<update id="update" parameterType="QnaDTO">
		UPDATE QNA
		SET TITLE=#{title}, CONTENTS=#{contents}
		WHERE NUM=#{num}
	</update>
	
	<delete id="delete" parameterType="QnaDTO">
		DELETE QNA WHERE NUM=#{num}
	</delete>
	
</mapper>